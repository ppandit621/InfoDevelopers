<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InfoDevelopers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InfoDevelopers.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">InfoDevelopers</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="mt-3 mb-5  text-center">
        <h3> Employee Management System</h3>

    </div>

    <div class="container p-2" style="border: 3px solid black; border-radius: 10px;">
        <div class="row">
            <div class="col-md-5 col-sm-5 mt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Employee ID</th>
                            <th>Name</th>
                            <th>Salary</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody data-bind="foreach:Employees">
                        <tr>
                            <td><span data-bind="text:($index() + 1)"></span></td>
                            <td><span data-bind="text:EmpName"></span></td>
                            <td><span data-bind="text:Salary"></span></td>
                            <td>
                                <button class="btn btn-danger" data-bind="click:$root.deleteEmployee">Delete</button>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>

            <div class="col-md-7 col-sm-7 mt-3" data-bind="with: Employee">
                @*<form>*@
                <div class="m-1 p-2" style="border: 3px solid black; border-radius: 10px;">
                    <div class="form-group row">
                        <label class="col-md-3 col-sm-3">Name*</label>
                        <div class="col-md-9 col-sm-9">
                            <input type="text" name="name" class="form-control" data-bind="value:EmpName" required />

                        </div>
                    </div>
                    <br />

                    <div class="form-group row ">
                        <div class="col-md-3">
                            <!--empty-->
                        </div>
                        <div class="col-md-9">
                            <div>
                                Gender*
                                <div>
                                    <input type="radio" name="gender" value="Male" data-bind="checked: Gender" /> Male
                                    <input type="radio" name="gender" value="Female" data-bind="checked: Gender" /> Female
                                    <input type="radio" name="gender" value="Third Gender" data-bind="checked: Gender" /> Third Gender
                                </div>
                            </div>
                        </div>
                    </div><br />

                    <div class="form-group row">
                        <label class="col-md-3 col-sm-3">DOB*</label>
                        <div class="col-md-9 col-sm-9">
                            <input type="date" name="DOB" class="form-control" data-bind="value:DOB, text:DOB" max="2025-02-06" required />


                        </div>
                    </div> <br>

                    <div class="form-group row">
                        <label class="col-md-3 col-sm-3">Salary</label>
                        <div class="col-md-9 col-sm-9">
                            <input type="number" name="Salary" min="0" class="form-control" data-bind="value:Salary" required />

                        </div>
                    </div> <br />

                </div>


                <div class="row m-2">
                    <u><h5 style="text-align:center; color:crimson;" class="font-weight-bold">Add Your Qualification</h5></u>

                    <div class="form-group row" data-bind="with: $root.empQual">

                        <div class="form-group col-md-2 row">
                            <button class="btn btn-primary" data-bind="click:$root.addqualification">Add</button>
                        </div>
                    </div>

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>QID</th>
                                <th>Qualification Name</th>
                                <th> Marks</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody data-bind="foreach:empQualifications">
                            <tr>
                                <td><span data-bind="text:($index() + 1)"></span></td>

                                <td>
                                    <select class="form-control" data-bind="options:$root.QualificationLists, optionsText:'qName',value: id, optionsValue: 'id', optionsCaption:'Choose Qualification'"></select>
                                </td>
                                <td>
                                    <input type="number" class="form-control" min="0" data-bind="value: marks" required>
                                </td>
                                <td>
                                    <button class="btn btn-danger" data-bind="click: $root.deleteQualification">Delete</button>
                                    <button class="btn btn-primary" data-bind="click:$root.addqualification">
                                        Add
                                    </button>

                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-3">
                <button class="btn btn-primary submitBtn" data-bind="click:$root.AddEmployee">Submit </button>
            </div>
            @*</form>*@
        </div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - InfoDevelopers - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/knockout.js" asp-append-version="true"></script>
    <script src="~/js/student.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
